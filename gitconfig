[core]
    excludesfile = ~/.gitignore
    autocrlf = false
    safecrlf = true
    eol = lf
	compression = 0
[color]
    ui = true
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    pager = true
[gui]
    encoding = utf-8
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
[push]
    default = tracking
[color "diff"]
    meta = blue black bold
[alias]
    df = diff -w
	cpx = cherry-pick -x
    pu = pull --rebase
    lg = log --graph --pretty=format:'%C(green)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold red)<%an>%Creset' --abbrev-commit --date=relative
    lh = log --graph --oneline --decorate --all
    lc = diff-tree --no-commit-id --name-only -r
    ch = show --stat --oneline
    st = status
    co = checkout
    br = branch
    dlf = show --pretty="" --name-only
    gdiff = difftool --tool=vimdiff
    hub = !git daemon --base-path=. --export-all --enable=receive-pack --reuseaddr --informative-errors --verbose
    serve = !git daemon --base-path=. --export-all --reuseaddr --informative-errors --verbose
    web = !git instaweb --httpd=webrick
[credential]
    helper = cache --timeout=3600
[include]
    path = ~/.gitconfig.local
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[http]
	postBuffer = 1048576000
[https]
